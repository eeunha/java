package com.test.question;

/*
 * 2023.07.27
 * 
 * Q. 아래와 같이 출력하시오.
 * 
 * 
 * */
public class Q070 {
	public static void main(String[] args) {
		int[][] nums = new int[5][5];
		
		for(int i = 0; i < nums.length; i++) {
			if (i % 2 == 0) {	// 짝수 행 - j 감소
				
			} else {	// 홀수 행 - j 증가
				
			}
		}
		
		// 출력 > 수정없이 그대로 사용
		for (int i = 0; i < 5; i++) {
			for (int j = 0; j < 5; j++) {
				System.out.printf("%5d", nums[i][j]);
			}
			System.out.println();
		}
	}
}
