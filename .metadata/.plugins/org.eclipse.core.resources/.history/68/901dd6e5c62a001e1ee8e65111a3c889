package com.test.question;

public class Q042 {
	public static void main(String[] args) {
		int year = 2023;
		int month = 7;
		int date = 25;

		int dayCount = 0;
		String dayOfWeek = "";

		// 윤년인지 확인
		// 윤년이라면 366일
		// 평년이라면 365일

		// 서기 1년 1월 1일 ~ year-1년 12월 31일 까지의 일수 더하기

		// dayCount = 365 * (year-1)
		dayCount = 365 * (year - 1);
//		System.out.println(dayCount);

		// dayCount += 작년까지의 년 중에서 윤년의 개수
		dayCount += countLeapYear(year);
//		System.out.println(dayCount);

		// 올해 지난달까지 일수 구하기
		dayCount += countMonthDays(year, month);

		// 올해 이번달 일수 더하기
		dayCount += date;

		System.out.printf("%d년 %d월 %d일은 %,d일째 되는 날이고 %s요일입니다.", year, month, date, dayCount, dayOfWeek);
	}

	private static int countMonthDays(int year, int month) {
		int count = 0;

		for (int i = 1; i < month; i++) {
			switch (i) {
			case 1:
			case 3:
			case 5:
			case 7:
			case 8:
			case 10:
			case 12:
				count += 31;
				break;
			case 4: case 6: case 9: case 11:
				count+= 30;
				break;
			case 2:
				count+=28;
				if (countLeapYear(year) == 1) {// 윤년일 경우
					count++;
				}
			}
		}

		return 0;
	}

	public static int countLeapYear(int year) {
		int count = 0;
		for (int i = 1; i < year; i++) {
			if (i % 4 == 0) {
				if (i % 100 == 0) {
					if (i % 400 == 0) {
						count++;
					}
				} else {
					count++;
				}
			}
		}
//		System.out.println(count);
		return count;
	}
}
