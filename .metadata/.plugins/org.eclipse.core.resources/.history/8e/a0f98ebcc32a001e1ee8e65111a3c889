package com.test.question;

public class Q060 {
	public static void main(String[] args) {
		// 현재 수 + 직전 수 더해서 다음 수 만들기
		int curNum = 1;
		System.out.print(curNum + " + ");

		int sum = 0;
		int lastNum = 0;
		int temp = lastNum;
		lastNum = curNum;
		curNum += temp;

		while (curNum <= 100) {
			System.out.print(lastNum + curNum + " + ");
//			temp = curNum;
//			curNum += lastNum;
//			lastNum = temp;
			
			temp = lastNum;
			lastNum = curNum;
			curNum += temp;
		}
		System.out.println("= " + sum);
	}
}
