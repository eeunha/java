package com.test.question;

import java.util.Scanner;

public class Q051 {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);

		System.out.print("í–‰: ");
		int num = scan.nextInt();

		for (int i = 1; i <= num; i++) {
			for (int j = i; j < num; j++) {
				System.out.print(" ");
			}
			for (int j = num - i; j < num; j++) {
				System.out.print("*");
			}
			for (int j = num - i; j < num; j++) {
				System.out.print(" ");
			}
			System.out.println();
		}
	}
}
