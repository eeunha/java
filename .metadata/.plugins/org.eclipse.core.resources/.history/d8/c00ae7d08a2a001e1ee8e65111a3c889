package com.test.question;

import java.util.Calendar;
import java.util.Scanner;

public class Q034 {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);

		System.out.print("년: ");
		int year = scan.nextInt();

		System.out.print("월: ");
		int month = scan.nextInt();

		System.out.print("일: ");
		int date = scan.nextInt();

		Calendar inputDay = Calendar.getInstance();
		inputDay.set(Calendar.YEAR, year);
		inputDay.set(Calendar.MONTH, month - 1);
		inputDay.set(Calendar.DATE, date);

		boolean isWeekend = checkDay(inputDay);

		if (isWeekend) {
			System.out.println("입력하신 날짜는 '평일'입니다.");
			System.out.println("해당 주의 토요일로 이동합니다.");
			
		} else {
			System.out.println("입력하신 날짜는 '휴일(토/일)입니다.");
			System.out.println("결과가 없습니다.");
		}

	}

	public static boolean checkDay(Calendar day) {
		if (day.get(Calendar.DAY_OF_WEEK) == 1 || day.get(Calendar.DAY_OF_WEEK) == 7)
			return true;
		else
			return false;
	}
}
