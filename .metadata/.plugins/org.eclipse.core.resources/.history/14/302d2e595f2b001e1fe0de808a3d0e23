package com.test.question;

import java.util.Scanner;

public class Q049 {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);

		System.out.print("í–‰: ");
		int num = scan.nextInt();

		for (int i = 0; i < num; i++) {
			for (int j = 0; j < i; j++) {
				System.out.print(" ");
			}
			for (int j = num - i; j > 0; j--) {
				System.out.print("*");
			}
			System.out.println();
		}
		
		scan.close();
	}
}
