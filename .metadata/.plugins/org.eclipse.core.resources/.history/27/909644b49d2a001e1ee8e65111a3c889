package com.test.question;

import java.util.Scanner;

public class Q051 {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);

		System.out.print("행: ");
		int num = scan.nextInt();

		for (int i = 1; i <= num; i++) {	// 행이자 행에 넣을 별의 개수
			for (int j = i; j < num; j++) {
				System.out.print(" ");
			}
			for (int j = num - i; j < num; j++) {
				System.out.print("*");
			}
			for (int j = 0; j < i - 1; j++) {	// 행-1 씩 별을 추가로 더한다.
				System.out.print("*");
			}
			System.out.println();
		}
	}
}
